{% block swag_paypal_izettle_wizard_connection_disconnect %}
    <div class="swag-paypal-izettle-wizard-connection-disconnect">

        {% block swag_paypal_izettle_wizard_connection_disconnect_headline_content %}
            <div class="swag-paypal-izettle-wizard-connection-disconnect__content">

                {% block swag_paypal_izettle_wizard_connection_disconnect_icon %}
                    <div class="swag-paypal-izettle-wizard-connection-disconnect__icon-wrapper">
                        <sw-icon class="swag-paypal-izettle-wizard-connection-disconnect__icon"
                                 name="default-badge-warning"
                                 size="80px"
                                 color="#de294c">
                        </sw-icon>
                    </div>
                {% endblock %}

                {% block swag_paypal_izettle_wizard_connection_disconnect_headline %}
                    <div class="swag-paypal-izettle-wizard-connection-disconnect__headline">
                        {{ $tc('swag-paypal-izettle.wizard.connectionDisconnect.headline') }}
                    </div>
                {% endblock %}

                {% block swag_paypal_izettle_wizard_connection_disconnect_info %}
                    <div class="swag-paypal-izettle-wizard-connection-disconnect__info">
                        {{ $tc('swag-paypal-izettle.wizard.connectionDisconnect.info') }}
                    </div>
                {% endblock %}

                {% block swag_paypal_izettle_wizard_connection_disconnect_user %}
                    <sw-card class="swag-paypal-izettle-wizard-connection-disconnect__user"
                             :isLoading="isFetchingInformation">
                        <sw-container class="swag-paypal-izettle-wizard-connection-disconnect__user-container"
                                      columns="30px auto 150px"
                                      align="center"
                                      gap="30px">

                            {% block swag_paypal_izettle_wizard_connection_disconnect_user_avatar %}
                                <sw-avatar
                                    class="swag-paypal-izettle-wizard-connection-disconnect__user-avatar"
                                    size="40px"
                                    :firstName="iZettleUser.firstName"
                                    :lastName="iZettleUser.lastName">
                                </sw-avatar>
                            {% endblock %}

                            {% block swag_paypal_izettle_wizard_connection_disconnect_user_information %}
                                <div class="swag-paypal-izettle-wizard-connection-disconnect__user-info">

                                    {% block swag_paypal_izettle_wizard_connection_disconnect_user_information_real %}
                                        <div class="swag-paypal-izettle-wizard-connection-disconnect__user-info-name">
                                            {{ iZettleUser.fullName }}
                                        </div>
                                        <div class="swag-paypal-izettle-wizard-connection-disconnect__user-info-mail">
                                            {{ iZettleUser.mail }}
                                        </div>
                                    {% endblock %}
                                </div>
                            {% endblock %}
                        </sw-container>
                    </sw-card>
                {% endblock %}
            </div>
        {% endblock %}
    </div>
{% endblock %}
