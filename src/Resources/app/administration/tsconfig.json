{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["ES2022", "DOM"],
    "module": "commonjs",
    "skipLibCheck": true,
    "allowJs": true,

    /* Interop Constraints */
    "isolatedModules": true,
    // "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "noEmit": true,
    "strict": true,
    "checkJs": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,

    "paths": {
      "src/*": [
        "./src/*",
        "./../../../../../../../src/Administration/Resources/app/administration/src/*"
      ],
      "*": [
        "./node_modules/*",
        "./../../../../../../../src/Administration/Resources/app/administration/node_modules/*"
      ]
    }
  },
  "files": [
    "./../../../../../../../src/Administration/Resources/app/administration/src/global.types.ts",
    "./../../../../../../../src/Administration/Resources/app/administration/src/entity-schema-definition.d.ts",
    "./../../../../../../../src/Administration/Resources/app/administration/src/html-shim.d.ts"
  ],
  "include": [
    "./src/**/*",
    "./.eslintrc.js",
  ]
}
